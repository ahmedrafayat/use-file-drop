  },
  "version": "0.1.0",
  "description": "A simple, zero dependancy hook for implementing drag and drop",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/use-file-drop.js",
  "module": "dist/use-file-drop.esm.js",
  "scripts": {
    "lint:check": "eslint src/**",
    "clean": "rm -rf ./dist",
    "prebuild": "npm run clean",
    "build": "microbundle --define process.env.NODE_ENV=production --sourcemap false --output dist --tsconfig ./tsconfig.json",
    "dev": "microbundle watch --define process.env.NODE_ENV=development --sourcemap true --output dist --tsconfig ./tsconfig.json"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "react",
    "hook",
    "file",
    "drag",
    "drop",
    "use-file-drop",
    "react-file-drop",
    "react file drag and drop",
    "react file upload",
    "drag and drop"
  ],
  "author": "rafayat",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "microbundle": "^0.13.3",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  }
}
